<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    android:padding="14dp"
    android:gravity="center"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:gravity="center_horizontal"
        android:textColor="@color/blanco"/>

    <Button
        android:id="@+id/btMenuPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:drawableStart="@drawable/ic_baseline_face_24"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blanco"
        android:text="Editar Perfil"/>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:drawableStart="@drawable/ic_baseline_add_circle_24"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blanco"
        android:text="Reservar Cita"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blanco"
        android:text="Mis Citas"/>

    <Button
        android:id="@+id/btMenuCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blanco"
        android:text="Cerrar SesiÃ³n"/>





</LinearLayout>